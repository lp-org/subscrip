{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local",".env"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],    
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": [
        "DATABASE_URL",
        "NODE_ENV",
        "BACKEND_URL",
        "STRIPE_SECRET_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "NEXT_PUBLIC_STOREFRONT_DOMAIN",
        "NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY"
      ]
    },
    "start": {
      "dependsOn": ["^start"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "generate":{  
      "cache": false
    },
    "drop":{},
    "push":{},
    "studio":{},
    "watch":{
      "cache": true
    },
    "seed":{
      "dotEnv": [".env"],
      "env": [
        "DATABASE_URL"
      ]
    },
    "clean":{}
  }
}
