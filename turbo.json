{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local",".env"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],    
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": [
        "DATABASE_URL",
        "NODE_ENV",
        "BACKEND_URL"
      ]
    },
    "start": {
      "dependsOn": ["^start"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "generate":{},
    "push":{},
    "studio":{},
    "watch":{
      "cache": true
    },
    "seed":{
      "dotEnv": [".env"],
      "env": [
        "DATABASE_URL"
      ]
    },
    "clean":{}
  }
}
